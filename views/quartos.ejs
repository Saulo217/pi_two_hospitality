<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quartos - Hotel Vale do Ref√∫gio</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="navbar">
        <h1>Vale do Ref√∫gio Hotel</h1>
        <ul>
            <li><a href="/">quartoss</a></li>
            <li><a href="/equipe">Equipe</a></li>
            <li><a href="/quartos">Quartos</a></li>
            <li><a href="/logout" style="color: rgb(129, 37, 45);">Logout</a></li>
        </ul>
    </div>

    <div class="containers">
        <h2>Quartos</h2>
        <a href="/quarto/cadastro" class="btn-primary" style="margin-bottom: 20px;">Cadastrar</a>
        <label class="available-text">Ver apenas quartos <span class="available-status">dispon√≠veis</span></label>
        <label class="switch">
            <input type="checkbox" id="filterAvailable" onclick="filterAvailableRooms()">
            <span class="slider round"></span>
        </label>
        <table id="roomsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Tipo</th>
                    <th>Camas</th>
                    <th>Categoria</th>
                    <th>Status</th>
                    <th>Editar</th>
                    <th>Remover</th>
                </tr>
            </thead>
            <tbody>
                <% let idCounter = 1; %>
                <% quartos.forEach(quarto => { %>
                <tr class="roomRow" data-status="<%= quarto.statuss %>">
                    <td><%= idCounter++ %></td>
                    <td><%= quarto.nome %></td>
                    <td><%= quarto.tipo %></td>
                    <td><%= quarto.camas %></td>
                    <td><%= quarto.categoria %></td>
                    <td><%= quarto.statuss %></td>
                    <td><a href="/quartos/edit/<%= quarto._id %>"><button class="btn-edit">‚úèÔ∏è</button></a></td>
                    <td><a href="/quartos/delete/<%= quarto._id %>"><button class="btn-remove">üóëÔ∏è</button></a></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    
    <script>
    function filterAvailableRooms() {
        const checkbox = document.getElementById('filterAvailable');
        const rows = document.querySelectorAll('.roomRow');
    
        rows.forEach(row => {
            if (checkbox.checked) {
                if (row.getAttribute('data-status') === 'Dispon√≠vel') {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            } else {
                row.style.display = '';
            }
        });
    }
    </script>
    

    <script src="scripts.js"></script>
</body>
</html>
